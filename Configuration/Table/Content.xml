<?xml version="1.0" encoding="utf-8"?>
<model
        name="Content"
        table="#__content"
        primary_key="id"
        name_key="title"
        primary_prefix="a"
        get_customfields="2"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="1"
        process_plugins="1"
        use_pagination="1"
        data_source="JDatabase">

    <table>
        <fields>
            <include name="FieldsContent"/>
        </fields>
        <joins>
            <include name="JoinsContent"/>
        </joins>
        <foreignkeys>
            <include name="ForeignkeysContent"/>
        </foreignkeys>
        <children>
            <include name="ChildrenContent"/>
        </children>
        <plugins>
            <include name="PluginsContent"/>
        </plugins>
    </table>

    <customfields>
        <customfield name="customfields">
            <include name="CustomfieldsContent"/>
        </customfield>
        <customfield name="metadata">
            <include name="Metadata"/>
        </customfield>
        <customfield name="parameters">
            <include name="ParametersContent"/>
        </customfield>
    </customfields>
</model>
