<?xml version="1.0" encoding="utf-8"?>
<model
        name="Extensions"
        table="#__extensions"
        primary_key="id"
        name_key="name"
        primary_prefix="a"
        get_customfields="0"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="0"
        process_plugins="0"
        use_pagination="1"
        data_source="JDatabase">
    <table>
        <fields>
            <field name="id" type="integer" null="0" default=" " identity="1"/>
            <field name="extension_site_id" type="integer" null="0" default="1"/>
            <field name="catalog_type_id" type="integer" null="0" default=""/>
            <field name="name" type="char" null="0" default=""/>
            <field name="subtitle" type="char" null="0" default=" "/>
            <field name="language" type="char" null="0" default=" "/>
            <field name="translation_of_id" type="integer" null="0" default="0"/>
            <field name="ordering" type="integer" null="0" default="0"/>
        </fields>
        <foreignkeys>
            <foreignkey name="extension_site_id" source_id="id" source_model="ExtensionSites" required="1"/>
            <foreignkey name="catalog_type_id" source_id="id" source_model="CatalogTypes" required="1"/>
        </foreignkeys>
        <children>
            <child name="ExtensionInstances" join="extension_id"/>
        </children>
        <join>
            <join model="CatalogTypes"
                  alias="catalog_types"
                  select="title"
                  jointo="id"
                  joinwith="catalog_type_id"/>
        </join>
    </table>
</model>
