<?xml version="1.0" encoding="utf-8"?>
<model
        name="Extensions"
        table="#__extensions"
        primary_key="id"
        name_key="name"
        primary_prefix="a"
        get_customfields="0"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="0"
        process_plugins="0"
        use_pagination="1"
        data_source="JDatabase">

    <table>
        <fields>
            <include field="id_pk"/>
            <include field="extension_site_id"/>
            <include field="catalog_type_id"/>
            <include field="name"/>
            <include field="subtitle"/>
            <include field="language"/>
            <include field="translation_of_id"/>
            <include field="ordering"/>
        </fields>
        <foreignkeys>
            <foreignkey name="extension_site_id" source_id="id" source_model="ExtensionSites" required="1"/>
            <foreignkey name="catalog_type_id" source_id="id" source_model="CatalogTypes" required="1"/>
        </foreignkeys>
        <children>
            <child name="ExtensionInstances" type="Table" join="extension_id"/>
        </children>
    </table>
</model>
