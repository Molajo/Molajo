<?xml version="1.0" encoding="utf-8"?>
<extension type="Site" version="1.0">
    <name>SYSTEM_SITES_NAME</name>
    <author>Molajo Team</author>
    <create_date>August 2012</create_date>
    <copyright>Copyright (C) 2012 Individual Molajo Contributors. All rights reserved.</copyright>
    <license>GNU GPL v 2, or later and MIT, see License folder</license>
    <author_email>collaborate@molajo.org</author_email>
    <author_url>http://molajo.org</author_url>
    <version>1.0</version>
    <description>SYSTEM_SITES_DESCRIPTION</description>
    <model
            name="Sites"
            table="#__sites"
            primary_key="id"
            name_key="name"
            primary_prefix="a"
            get_customfields="0"
            get_item_children="0"
            use_special_joins="0"
            check_view_level_access="0"
            process_plugins="0"
            catalog_type_id="10"
            data_source="JDatabase">
        <table>
            <fields>
                <field name="id" type="integer" null="1" default="0" identity="1"/>
                <field name="catalog_type_id" type="integer" null="0" default="10" values="10"/>
                <field name="name" type="char" null="0" default="" unique="1"/>
                <field name="path" type="char" null="0" default=""/>
                <field name="base_url" type="url" null="0" default=""/>
                <field name="description" type="text" null="0" default=" "/>
            </fields>
            <foreignkeys>
                <foreignkey name="catalog_type_id" source_id="id" source_model="CatalogTypes" required="1"/>
            </foreignkeys>
            <plugins>
                <plugin name="Sites"/>
            </plugins>
        </table>
    </model>
</extension>
