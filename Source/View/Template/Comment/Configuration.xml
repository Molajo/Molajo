    <version>1.0</version>
    <description>VIEW_TEMPLATE_COMMENT_DESCRIPTION</description>
    <model name="Comment" process_events="1" extends="Templateview">
        <customfields>
            <customfield name="customfields">
                <field name="parent_model_type" type="char" null="0" default=""/>
