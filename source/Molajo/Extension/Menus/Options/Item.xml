<?xml version="1.0" encoding="utf-8"?>
<model
        name="MenusItem"
        catalog_type_id="10000"
        table="#__content"
        primary_key="id"
        name_key="title"
        primary_prefix="a"
        get_customfields="1"
        get_item_children="0"
        use_special_joins="1"
        check_view_level_access="1"
        data_source="JDatabase">
    <table>
        <item>
            <fields>
                <include name="FieldsContent"/>
            </fields>
            <joins>
                <include name="JoinsContent"/>
            </joins>
            <foreignkeys>
                <include name="ForeignkeysContent"/>
            </foreignkeys>
            <children>
                <include name="ChildrenContent"/>
            </children>
            <triggers>
                <include name="TriggersContent"/>
            </triggers>
            <customfields>
                <customfield name="customfields">
                    <include name="CustomfieldsContent"/>
                    <field name="example_of_content_only_field" type="int" null="1" default="1"/>
                </customfield>
                <customfield name="metadata">
                    <include name="Metadata"/>
                </customfield>
                <customfield name="parameters">
                    <field name="criteria_title" type="char" null="0" default="Molajo Menu Item" values=""/>
                    <field name="criteria_display_view_on_no_results" type="binary" null="1" default="1" values="0,1"/>
                    <field name="criteria_catalog_type_id" type="integer" null="1" default="10000" values=""/>
                    <field name="criteria_snippet_length" type="integer" null="1" default="200" values=""/>

                    <include name="ParametersMenuitem"/>
                    <include name="ParametersGrid"/>
                    <include name="ParametersImage"/>
                    <include name="ParametersGravatar"/>
                    <include name="ParametersAsset"/>
                    <include name="ParametersMustache"/>
                    <include name="ParametersCache"/>
                    <include name="ParametersLog"/>
                </customfield>
            </customfields>
        </item>
    </table>
</model>
