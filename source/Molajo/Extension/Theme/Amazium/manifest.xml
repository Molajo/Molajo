<?xml version="1.0" encoding="utf-8"?>
<extension type="theme" version="1.0">
    <name>THEME_AMAZIUM_NAME</name>
    <author>Amy Stephen</author>
    <create_date>February 2012</create_date>
    <copyright>Copyright 2012 Amy Stephen. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author_email>collaborate@molajo.org</author_email>
    <author_url>http://molajo.org/</author_url>
    <version>1.0</version>
    <description>THEME_AMAZIUM_DESCRIPTION</description>
    <config>
        <field name="custom_fields" registry="ThemeCustomfields">
            <element name="custom_fields" filter="char" null="0" default="This is the default" values=""/>
        </field>
        <field name="parameters" registry="ThemeParameters">
            <element name="display_title" filter="char" null="0" default=""/>
            <element name="display_suppress_no_results" filter="binary" null="1" default="1" values="0,1"/>
            <element name="catalog_type_id" filter="integer" null="1" default="10000" values="10000" hidden="true"/>
            <element name="default_theme_id" filter="integer" null="1" default="" values=""/>
            <element name="default_page_view_id" filter="integer" null="1" default="" values=""/>
            <element name="default_items_template_view_id" filter="integer" null="1" default="" values=""/>
            <element name="default_items_wrap_view_id" filter="integer" null="1" default="" values=""/>
            <element name="default_item_template_view_id" filter="integer" null="1" default="" values=""/>
            <element name="default_item_wrap_view_id" filter="integer" null="1" default="" values=""/>
            <element name="default_edit_template_view_id" filter="integer" null="1" default="" values=""/>
            <element name="default_edit_wrap_view_id" filter="integer" null="1" default="" values=""/>
            <element name="caching" filter="binary" null="1" default="1" values="0,1"/>
            <element name="cache_time" filter="integer" null="1" default="15" values=""/>
            <element name="cache_handler" filter="char" null="1" default="" values=""/>
        </field>
        <field name="metadata" registry="ThemeMetadata">
            <element name="metadata_title" filter="char" null="0" default=""/>
            <element name="metadata_description" filter="text" null="0" default=""/>
            <element name="metadata_keywords" filter="char" null="1" default=""/>
            <element name="metadata_robots" filter="char" null="0" default="follow,index"
                     values="follow,nofollow,index,noindex"/>
            <element name="metadata_author" filter="char" null="1" default=""/>
            <element name="metadata_content_rights" filter="char" null="1" default=""/>
        </field>
    </config>
</extension>
