<?xml version="1.0" encoding="utf-8"?>
<model
        name="CatalogActivity"
        table="#__catalog_activity"
        primary_key="id"
        primary_prefix="a"
        get_customfields="0"
        get_item_children="0"
        use_special_joins="0"
        check_view_level_access="0"
        data_source="JDatabase">

    <table>
        <fields>
            <field name="id" type="integer" null="1" default="0"/>
            <field name="catalog_id" type="catalog_id" null="0" default="" values=""/>
            <field name="user_id" type="integer" null="0" default="0" values=""/>
            <field name="rating" type="integer" null="1" default="" values=""/>
            <field name="activity_datetime" type="datetime" null="0" default=""/>
            <field name="ip_address" type="char" null="0" default=""/>
            <field name="customfields" type="customfield" null="1" default=""/>
        </fields>

        <triggers>
            <trigger name="IPAddress"/>
            <trigger name="Language"/>
        </triggers>

        <foreignkeys>
            <foreignkey name="catalog_id" source_id="id" source_model="Catalog" required="1"/>
            <foreignkey name="user_id" source_id="id" source_model="Users" required="1"/>
        </foreignkeys>
    </table>
</model>
