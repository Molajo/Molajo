<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="1.6.0"
        application="site"
        method="upgrade">
    <name>login</name>
    <author>Molajo Project</author>
    <creationDate>July 2006</creationDate>
    <copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>molajo.org</authorUrl>
    <version>1.0</version>
    <description>LOGIN_DESCRIPTION</description>
    <files>
        <filename module="login">login.php</filename>
        <folder>views</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>login.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.login.ini</language>
        <language tag="en-GB">en-GB.login.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_LOGIN"/>
    <config>
        <fields name="parameters">
            <fieldset name="basic">
                <field
                        name="pretext"
                        type="textarea"
                        filter="safehtml"
                        cols="30"
                        rows="5"
                        label="LOGIN_FIELD_PRE_TEXT_LABEL"
                        description="LOGIN_FIELD_PRE_TEXT_DESC"/>
                <field
                        name="posttext"
                        type="textarea"
                        filter="safehtml"
                        cols="30"
                        rows="5"
                        label="LOGIN_FIELD_POST_TEXT_LABEL"
                        description="LOGIN_FIELD_POST_TEXT_DESC"/>
                <field
                        name="login"
                        type="menuitem"
                        disable="separator"
                        label="LOGIN_FIELD_LOGIN_REDIRECTURL_LABEL"
                        description="LOGIN_FIELD_LOGIN_REDIRECTURL_DESC">
                    <option
                            value="">JDEFAULT
                    </option>
                </field>
                <field
                        name="logout"
                        type="menuitem"
                        disable="separator"
                        label="LOGIN_FIELD_LOGOUT_REDIRECTURL_LABEL"
                        description="LOGIN_FIELD_LOGOUT_REDIRECTURL_DESC">
                    <option
                            value="">JDEFAULT
                    </option>
                </field>
                <field
                        name="greeting"
                        type="radio"
                        default="1"
                        label="LOGIN_FIELD_GREETING_LABEL"
                        description="LOGIN_FIELD_GREETING_DESC">
                    <option
                            value="0">JNo
                    </option>
                    <option
                            value="1">JYes
                    </option>
                </field>
                <field
                        name="name"
                        type="list"
                        default="0"
                        label="LOGIN_FIELD_NAME_LABEL"
                        description="LOGIN_FIELD_NAME_DESC">
                    <option
                            value="0">LOGIN_VALUE_NAME
                    </option>
                    <option
                            value="1">LOGIN_VALUE_USERNAME
                    </option>
                </field>
                <field
                        name="usesecure"
                        type="radio"
                        default="0"
                        label="LOGIN_FIELD_USESECURE_LABEL"
                        description="LOGIN_FIELD_USESECURE_DESC">
                    <option
                            value="0">JNo
                    </option>
                    <option
                            value="1">JYes
                    </option>
                </field>
            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="view"
                        type="moduleview"
                        label="JFIELD_ALT_VIEW_LABEL"
                        description="JFIELD_ALT_MODULE_VIEW_DESC"/>
                <field
                        name="view_class_suffix"
                        type="text"
                        label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="cache"
                        type="list"
                        default="0"
                        label="MODULES_FIELD_CACHING_LABEL"
                        description="MODULES_FIELD_CACHING_DESC">
                    <option
                            value="0">MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
