<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.0" application="administrator" method="upgrade">
    <name>CUSTOM_NAME</name>
    <author>Molajo Contributors</author>
    <creationDate>January 2012</creationDate>
    <copyright>Copyright 2012 Amy Stephen. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>http://molajo.org</authorUrl>
    <version>1.0</version>
    <description>CUSTOM_DESCRIPTION</description>
    <files>
        <filename module="custom">custom.php</filename>
        <folder>language</folder>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.custom.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.custom.sys.ini</language>
    </languages>
    <config>
        <fields name="parameters">
            <fieldset name="basic">
                <field
                        name="prepare_content"
                        type="radio"
                        label="CUSTOM_FIELD_PREPARE_CONTENT_LABEL"
                        description="CUSTOM_FIELD_PREPARE_CONTENT_DESC"
                        default="1">
                    <option
                            value="0">JNO
                    </option>
                    <option
                            value="1">JYES
                    </option>
                </field>
            </fieldset>
            <fieldset include="advanced"/>
        </fields>
    </config>
</extension>