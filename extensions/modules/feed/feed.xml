<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="1.6.0"
        application="site"
        method="upgrade">
    <name>feed</name>
    <author>Molajo Project</author>
    <creationDate>July 2005</creationDate>
    <copyright>Copyright (C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>molajo.org</authorUrl>
    <version>1.0</version>
    <description>FEED_DESCRIPTION</description>
    <files>
        <filename module="feed">feed.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>views</folder>
    </files>
    <languages>
        <language tag="en-GB">en-GB.feed.ini</language>
        <language tag="en-GB">en-GB.feed.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_FEED_DISPLAY"/>
    <config>
        <fields name="parameters">
            <fieldset name="basic">
                <field
                        name="rssurl"
                        type="url"
                        size="50"
                        label="FEED_FIELD_RSSURL_LABEL"
                        description="FEED_FIELD_RSSURL_DESC"/>
                <field
                        name="rssrtl"
                        type="radio"
                        default="0"
                        label="FEED_FIELD_RTL_LABEL"
                        description="FEED_FIELD_RTL_DESC">
                    <option
                            value="1">JYES
                    </option>
                    <option
                            value="0">JNO
                    </option>
                </field>
                <field
                        name="rsstitle"
                        type="radio"
                        default="1"
                        label="FEED_FIELD_RSSTITLE_LABEL"
                        description="FEED_FIELD_RSSTITLE_DESC">
                    <option
                            value="1">JYES
                    </option>
                    <option
                            value="0">JNO
                    </option>
                </field>
                <field
                        name="rssdesc"
                        type="radio"
                        default="1"
                        label="FEED_FIELD_DESCRIPTION_LABEL"
                        description="FEED_FIELD_DESCRIPTION_DESC">
                    <option
                            value="1">JYES
                    </option>
                    <option
                            value="0">JNO
                    </option>
                </field>
                <field
                        name="rssimage"
                        type="radio"
                        default="1"
                        label="FEED_FIELD_IMAGE_LABEL"
                        description="FEED_FIELD_IMAGE_DESC">
                    <option
                            value="1">JYES
                    </option>
                    <option
                            value="0">JNO
                    </option>
                </field>
                <field
                        name="rssitems"
                        type="text"
                        default="3"
                        label="FEED_FIELD_ITEMS_LABEL"
                        description="FEED_FIELD_ITEMS_DESC"/>
                <field
                        name="rssitemdesc"
                        type="radio"
                        default="1"
                        label="FEED_FIELD_ITEMDESCRIPTION_LABEL"
                        description="FEED_FIELD_ITEMDESCRIPTION_DESC">
                    <option
                            value="1">JYES
                    </option>
                    <option
                            value="0">JNO
                    </option>
                </field>
                <field
                        name="word_count"
                        type="text"
                        size="6"
                        default="0"
                        label="FEED_FIELD_WORDCOUNT_LABEL"
                        description="FEED_FIELD_WORDCOUNT_DESC"/>
            </fieldset>
            <fieldset
                    name="advanced">
                <field
                        name="view"
                        type="moduleview"
                        label="JFIELD_ALT_VIEW_LABEL"
                        description="JFIELD_ALT_MODULE_VIEW_DESC"/>

                <field
                        name="view_class_suffix"
                        type="text"
                        label="MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="MODULES_FIELD_MODULECLASS_SFX_DESC"/>

                <field
                        name="cache"
                        type="list"
                        default="1"
                        label="MODULES_FIELD_CACHING_LABEL"
                        description="MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>

                <field
                        name="cache_time"
                        type="text"
                        default="900"
                        label="MODULES_FIELD_CACHE_TIME_LABEL"
                        description="MODULES_FIELD_CACHE_TIME_DESC"/>
            </fieldset>
        </fields>
    </config>
</extension>
