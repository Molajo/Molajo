<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset>
		<field
			name="id"
			type="text"
			class="readonly"
			label="ID_LABEL"
			description ="ID_DESC"
			default="0"
			filter="int"
			readonly="true"
            />

        <field
            name="extension_instance_id"
            type="hidden"
            filter="unset"
            />

        <field
            name="content_type_id"
            type="list"
            label="CONTENT_TYPE_LABEL"
            description="CONTENT_TYPE_DESC"
            default="0"
            required="true"
            filter="int"
            class="inputbox"
            >
        </field>

		<field
			name="title"
			type="text"
			label="TITLE_LABEL"
			description="TITLE_DESC"
			class="inputbox"
			size="40"
			required="true"
            />

		<field
			name="subtitle"
			type="text"
			label="SUBTITLE_LABEL"
			description="SUBTITLE_DESC"
			class="inputbox"
			size="40"
			required="true"
            />        

		<field
			name="alias"
			type="alias"
			label="ALIAS_LABEL"
			description="ALIAS_DESC"
			class="inputbox"
			size="40"
            />

        <field
            name="protected"
            type="hidden"
            filter="unset"
            />

		<field
			name="featured"
			type="radio"
			label="FEATURED_LABEL"
			description="FEATURED_DESC"
			default="0"
			filter="int"
			class="inputbox"
            >
            <option value="1">YES</option>
            <option value="0">NO</option>
		</field>

		<field
			name="stickied"
			type="radio"
			label="STICKIED_LABEL"
			description="STICKIED_DESC"
			default="0"
			filter="int"
			class="inputbox"
            >
            <option value="1">YES</option>
            <option value="0">NO</option>
		</field>

		<field
			name="status"
			type="list"
			class="inputbox"
			label="STATUS_LABEL"
			description="STATUS_DESC"
			size="1"
			default="1"
			filter="integer">
			<option value="1">PUBLISHED</option>
			<option value="0">UNPUBLISHED</option>
			<option value="-2">TRASHED</option>
		</field>

        <field
            name="start_publishing_datetime"
            type="calendar"
            label="START_PUBLISHING_DATETIME_LABEL"
            description="START_PUBLISHING_DATETIME_DESC"
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            size="22"
            filter="user_utc"
            />

        <field
            name="stop_publishing_datetime"
            type="calendar"
            label="STOP_PUBLISHING_DATETIME_LABEL"
            description="STOP_PUBLISHING_DATETIME_DESC"
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            size="22"
            filter="user_utc"
            />

        <field
            name="version"
            type="hidden"
            filter="unset"
            />

        <field
            name="version_of_id"
            type="hidden"
            filter="unset"
            />

        <field
            name="status_prior_to_version"
            type="hidden"
            filter="unset"
            />

        <field
            name="created_datetime"
            type="calendar"
            label="CREATED_DATETIME_LABEL"
            description="CREATED_DATETIME_DESC"
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            size="22"
            filter="user_utc"
            />

		<field
            name="created_by"
            type="user"
			label="CREATED_BY_LABEL"
            description="CREATED_BY_DESC"
            />

        <field
            name="modified_datetime"
            type="calendar"
            label="MODIFIED_DATETIME_LABEL"
            description="MODIFIED_DATETIME_DESC"
            class="inputbox"
            format="%Y-%m-%d %H:%M:%S"
            size="22"
            filter="user_utc"
            />

		<field
            name="modified_by"
            type="user"
			label="MODIFIED_BY_LABEL"
            description="MODIFIED_BY_DESC"
            />

		<field
			name="checked_out_datetime"
			type="hidden"
			filter="unset"
            />

		<field
			name="checked_out_by"
			type="hidden"
			filter="unset"
            />

		<field
			name="parent_id"
			type="menuparent"
			label="PARENT_LABEL"
			description="PARENT_DESC"
			default="1"
			filter="int"
			class="inputbox"
			size="1"
            >
			<option value="1">ROOT</option>
		</field>

        <field
            name="lft"
            type="hidden"
            filter="unset"
            />

        <field
            name="rgt"
            type="hidden"
            filter="unset"
            />

        <field
            name="level"
            type="hidden"
            filter="unset"
            />

        <field
            name="home"
            type="radio"
            label="HOME_LABEL"
            description="HOME_DESC"
            default="0"
            class="inputbox"
            filter="integer">
            <option value="0">NO</option>
            <option value="1">YES</option>
        </field>

        <fields name="custom_fields">
        </fields>

        <fields name="parameters">
        </fields>

		<field
			name="language"
			type="language"
			label="LANGUAGE_LABEL"
			description="LANGUAGE_DESC"
			class="inputbox">
			<option value="*">ALL</option>
		</field>

        <field
            name="translation_of_id"
            type="hidden"
            filter="unset"
            />

        <field
            name="ordering"
            type="ordering"
            label="ORDERING_LABEL"
            description="ORDERING_DESC"
            filter="int"
            class="inputbox"
            />

	</fieldset>

</form>
