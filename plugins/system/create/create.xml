<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_CREATE_NAME</name>
    <author>Amy Stephen</author>
    <creationDate>June 2011</creationDate>
    <copyright>Copyright (C) 2011 Amy Stephen. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later http://www.gnu.org/licenses/gpl.html</license>
    <authorEmail>AmyStephen@molajo.org</authorEmail>
    <authorUrl>http://molajo.org</authorUrl>
    <version>1.6.0</version>
    <description>PLG_SYSTEM_CREATE_XML_DESCRIPTION</description>

	<files>
		<filename plugin="create">create.php</filename>
		<filename>index.html</filename>
		<folder>com_installer</folder>
		<folder>includes</folder>
		<folder>jform</folder>
		<folder>jhtml</folder>
		<folder>language</folder>
		<folder>media</folder>
		<folder>plg_system_create</folder>
	</files>
	
	<languages>
		<language tag="language/en-GB">en-GB.plg_system_create.ini</language>
		<language tag="language/en-GB">en-GB.plg_system_create.sys.ini</language>
	</languages>

    <media>
        <folder>plg_system_create</folder>
    </media>
	 
	<config>
            <fields name="params">

                <fieldset
                    name="fieldset_extend"
                    label="PLG_SYSTEM_CREATE_EXTEND_FIELDSET_LABEL">

                        <field
                            name="section_create_installer_enable"
                            type="spacer"
                            hr="false"
                            label="PLG_SYSTEM_CREATE_CREATE_LABEL"
                            description="PLG_SYSTEM_CREATE_CREATE_DESC"
                            />

                       <field
                            name="enable_installer_create_extensions"
                            type="radio"
                            label="PLG_SYSTEM_CREATE_ENABLE_CREATE_INSTALLER_CREATE_EXTENSIONS_LABEL"
                            description="PLG_SYSTEM_CREATE_ENABLE_CREATE_INSTALLER_CREATE_EXTENSIONS_DESC"
                            default="1">
                            <option
                                    value="0">JNO</option>
                            <option
                                    value="1">JYES</option>
                        </field>

                </fieldset>
            </fields>
	</config>
</extension>