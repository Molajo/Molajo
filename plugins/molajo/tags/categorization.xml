    <authorEmail>collaborate@molajo.org</authorEmail>
    <authorUrl>http://molajo.org</authorUrl>
    <version>1.6.0</version>
    <description>PLG_MOLAJO_CATEGORIZATION_XML_DESCRIPTION</description>
	<files>
		<filename plugin="categorization.php">categorization.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
		<folder>meta</folder>
		<folder>tags</folder>
	</files>
	<languages>
		<language tag="language/en-GB">en-GB.plg_molajo_categorization.ini</language>
		<language tag="language/en-GB">en-GB.plg_molajo_categorization.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					default=""
					description="PLG_MOLAJO_CATEGORIZATION_FIELD_XXX_DESC"
					label="PLG_MOLAJO_CATEGORIZATION_FIELD_XXX_LABEL"
                                        name="email"
					size="60"
                                        type="text"
				/>
			</fieldset>
		</fields>
	</config>
</extension>