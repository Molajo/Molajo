    <version>1.0</version>
    <description>VIEW_TEMPLATE_COMMENTFORM_DESCRIPTION</description>
    <model name="Commentform" process_plugins="1" extends="TemplateviewsSystem">
        <customfields>
            <customfield name="customfields">
                <field name="parent_model_type" type="char" null="0" default=""/>
