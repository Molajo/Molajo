<?xml version="1.0" encoding="utf-8"?>
<extension type="Templateview" version="1.0">
    <name>VIEW_TEMPLATE_FOOTER_NAME</name>
    <author>Amy Stephen</author>
    <create_date>August 2012</create_date>
    <copyright>Copyright (C) 2012 Amy Stephen. All rights reserved.</copyright>
    <license>GNU GPL v 2, or later and MIT, see License folder</license>
    <author_email>hello@niambie.org</author_email>
    <author_url>http://niambie.org</author_url>
    <version>1.0</version>
    <description>VIEW_TEMPLATE_FOOTER_DESCRIPTION</description>
    <model name="Footer"  process_plugins="1" extends="TemplateviewsSystem">
        <customfields>
            <customfield name="parameters">
                <field name="copyright_holder" type="char" null="0" default="Molajo"/>
                <field name="copyright_first_year" type="char" null="1" default=""/>
                <field name="link" type="char" null="1" default="http://Molajo.org"/>
                <field name="linked_text" type="char" null="0" default="Molajo"/>
                <field name="remaining_text" type="char" null="0" default=" is Free Software"/>
            </customfield>
        </customfields>
        <table>
            <plugins>
                <plugin name="Copyright"/>
            </plugins>
        </table>
    </model>
</extension>
