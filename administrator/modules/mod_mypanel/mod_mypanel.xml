<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.6" application="administrator" method="upgrade">
    <name>Minima myPanel</name>
    <author>Marco Barbosa</author>
    <creationDate>October 2010</creationDate>
    <copyright>Copyright (C) 2010 Marco Barbosa. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>iam@marcobarbosa.com</authorEmail>
    <authorUrl>http://marcobarbosa.com</authorUrl>
    <version>0.9</version>
    <description>This module provides a panel for the minima template.</description>
    <!-- Extension Update Specification -->
    <updateservers>
        <server type="extension" priority="1" name="Minima Update Site">http://minimatemplate.com/update/modules/mod_mypanel/extension.xml</server>
        <server type="collection" priority="2" name="Minima Update Site">http://minimatemplate.com/update/update.xml</server>
    </updateservers>
    <!--  Dependencies -->
    <dependencies>
        <dependency type="platform" name="joomla" operator="=" version="1.6" />
    </dependencies>
    <!-- Files -->
    <files>
        <filename module="mod_mypanel">mod_mypanel.php</filename>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
</install>
