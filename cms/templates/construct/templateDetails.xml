    <params addpath="/templates/construct/elements/present">
        <param type="panel" title="General"/>
        <param name="enableSwitcher" type="radio" default="0" label="Layout Aid"
               description="Enable the ajax style sheet switcher to use the diagnostic and wireframe visual layout aids.">
            <option value="1">Show</option>
            <option value="0">Hide</option>
        </param>
        <param name="showDiagnostics" type="radio" default="0" label="Override Diagnostics"
               description="Enable display of the current article, item, category, section, and component exteneded template override information.">
            <option value="1">Show</option>
            <option value="0">Hide</option>
        </param>
        <param name="customStyleSheet" type="filelist" default="example.css" label="Custom style sheet"
               directory="templates/construct/css" filter="\.css"
               exclude="core-css-classes-ids\.css|diagnostic\.css|editor\.css|modal\.css|normal\.css|print\.css|rtl\.css|screen\.css|core-classes-ids\.css|ie6\.css|overrides\.css|mobile\.css|wireframe\.css"
               description="Name of the style sheet that contains your custom CSS declarations. Default is custom.css."/>
        <param name="setGeneratorTag" type="text" default="Construct Framework | http://Construct-Framework.com"
               label="Generator Meta Tag" description="Customize the generator meta tag output by your template."
               size="56"/>
        <param type="panel" title="Internet Explorer"/>
        <param name="IECSS3" type="radio" default="1" label="Add CSS3 Support to IE"
               description="Enable the use of PIE (http://css3pie.com/) to add CSS3 support to Internet Explorer version 8 and before. Also adds pie_hover class to non-link items on hover. For performance reason, you must define the tagret elements below.">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="IECSS3Targets" type="text" default=".drop-shadow, .outline, .rounded, ul.menu li"
               label="IE CSS3 Support Targets"
               description="Enter a comma seprated list of HTML targets to apply PIE to." size="50"/>
        <param name="IE6TransFix" type="radio" default="1" label="Add IE6 Transparency Fix"
               description="Enable the use DD_belatedPNG (http://www.dillerdesign.com/experiment/DD_belatedPNG/) to add transparentcy support to IE6. For performance reason, you must define the tagret elements below.">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="IE6TransFixTargets" type="text" default="h1 a" label="IE6 Transparency Fix Targets"
               description="Enter a comma seprated list of HTML targets to apply DD_belatedPNG to." size="50"/>
        <param type="panel" title="Javascript"/>
        <param name="loadMoo" type="radio" default="1" label="Load MooTools"
               description="Load the MooTools JavaScript library that is included with Joomla.">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="loadModal" type="radio" default="1" label="Enable modal pop-ups"
               description="Load the SqueezeBox JavaScript for modals. Requires MooTools to be enabled.">
            <option value="1">Yes</option>
            <option value="0">No</option>
        </param>
        <param name="loadjQuery" type="jqueryversion" default="" label="Load jQuery"
               description="Select the version of the jQuery JavaScript library to load, hosted by Google. jQuery will not load if no version is selected."/>
        <param type="panel" title="Layout"/>
        <param name="gridSystem" type="filelist" default="construct.css" label="Grid System"
               directory="templates/construct/css/grids" filter="\.css"
               description="Optionally select the grid system to use. Default is Construct's standard layout. Add other grid system style sheets to templates/construct/css/grids/"/>
        <param name="siteWidth" type="text" default="80.5" label="Site Width"
               description="Define the overall width of the layout. Enter only a number, no units, as you will choose which unit to use below."
               size="10"/>
        <param name="siteWidthType" type="radio" default="max-width" label="Site Width Style"
               description="Set whether to use a fluid max-width or fixed width layout.">
            <option value="max-width">Fluid Max-width</option>
            <option value="width">Fixed Width</option>
        </param>
        <param name="siteWidthUnit" type="radio" default="em" label="Site Width Type"
               description="Choose to set the width in relative Ems, Pixels or percentage. Ems are calculated based on their parent element size, where the body font size is approximately 12px.">
            <option value="em">Em</option>
            <option value="px">Pixel</option>
            <option value="%">Percent</option>
        </param>
        <param name="fluidMedia" type="radio" default="0" label="Fluid Media"
               description="Enable for fluid image and object resizing when using a fluid layout. NOTE: Do not specify widths in the source-code as this option enables an img, object {max-width:100%} declaration">
            <option value="1">Yes</option>
            <option value="0">No</option>
