<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="attribs">

        <fieldset
                name="author"
                label="PLG_SYSTEM_EXTEND_AUTHOR_SLIDER_LABEL"
                addfieldpath="/plugins/system/extend/fieldtypes/custom"
                >

            <field
                    name="photograph"
                    type="media"
                    directory="images"
                    hide_none="true"
                    label="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_PHOTOGRAPH_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_PHOTOGRAPH_DESC"
                    >
            </field>

            <field
                    name="email_address"
                    type="email"
                    default=""
                    label="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_EMAIL_ADDRESS_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_EMAIL_ADDRESS_DESC"
                    filter="email"
                    size="60"
                    >
            </field>

            <field
                    name="website"
                    type="url"
                    default=""
                    label="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_WEBSITE_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_WEBSITE_DESC"
                    filter="url"
                    size="60"
                    >
            </field>

            <field
                    name="institution"
                    type="text"
                    default=""
                    label="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_INSTITUTION_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_INSTITUTION_DESC"
                    filter="string"
                    size="60"
                    >
            </field>

            <field
                    name="abstract"
                    type="abstract"
                    multiple="true"
                    size="5"
                    label="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_ABSTRACT_LABEL"
                    description="PLG_SYSTEM_EXTEND_FIELD_AUTHOR_ABSTRACT_DESC"
                    >
            </field>
        </fieldset>
    </fields>
</form>