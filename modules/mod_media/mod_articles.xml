<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	application="site"
	method="upgrade">
	<name>mod_media</name>
	<author>Molajo Project</author>
	<creationDate>July 2004</creationDate>
	<copyright>Copyright (C) 2005 - 2011 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>admin@joomla.org</authorEmail>
	<authorUrl>www.joomla.org</authorUrl>
	<version>1.0</version>
	<description>MOD_MEDIA_DESCRIPTION</description>
	<files>
		<filename module="mod_media">mod_media.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_media.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_media.ini</language>
		<language tag="en-GB">en-GB.mod_media.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_ARTICLES" />
	<config>
		<fields name="params">
			<fieldset name="basic">
			<field
					name="catid"
					type="category"
					extension="com_media"
					multiple="true"
					size="10"
					default=""
					label="JCATEGORY"
					description="MOD_MEDIA_FIELD_CATEGORY_DESC" >
					<option value="">JOPTION_ALL_CATEGORIES</option>
				</field>
				<field
					name="count"
					type="text"
					default="5"
					label="MOD_MEDIA_FIELD_COUNT_LABEL"
					description="MOD_MEDIA_FIELD_COUNT_DESC" />

				<field
					name="show_featured"
					type="list"
					default=""
					label="MOD_MEDIA_FIELD_FEATURED_LABEL"
					description="MOD_MEDIA_FIELD_FEATURED_DESC">
					<option
						value="">JSHOW</option>
					<option
						value="0">JHIDE</option>
					<option
						value="1">MOD_MEDIA_VALUE_ONLY_SHOW_FEATURED</option>
				</field>

				<field
					name="ordering"
					type="list"
					default="published"
					label="MOD_MEDIA_FIELD_ORDERING_LABEL"
					description="MOD_MEDIA_FIELD_ORDERING_DESC">
					<option
						value="c_dsc">MOD_MEDIA_VALUE_RECENT_ADDED</option>
					<option
						value="m_dsc">MOD_MEDIA_VALUE_RECENT_MODIFIED</option>
					<option
						value="p_dsc">MOD_MEDIA_VALUE_RECENT_PUBLISHED</option>
					<option
						value="mc_dsc">MOD_MEDIA_VALUE_RECENT_TOUCHED</option>
				</field>

				<field
					name="user_id"
					type="list"
					default="0"
					label="MOD_MEDIA_FIELD_USER_LABEL"
					description="MOD_MEDIA_FIELD_USER_DESC">
					<option
						value="0">MOD_MEDIA_VALUE_ANYONE</option>
					<option
						value="by_me">MOD_MEDIA_VALUE_ADDED_BY_ME</option>
					<option
						value="not_me">MOD_MEDIA_VALUE_NOTADDED_BY_ME</option>
				</field>

			</fieldset>

			<fieldset
				name="advanced">

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="layout_class_suffix"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
