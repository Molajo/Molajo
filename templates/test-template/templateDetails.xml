<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.5/template-install.dtd">
<install version="1.6" type="template" method="upgrade">
	<name>test-template</name>
	<creationDate>Day 0</creationDate>
	<author>Joomla Engineering</author>
	<copyright>Copyright (C) 2010, 2011 Matt Thomas | Joomla Engineering. All rights reserved.</copyright>
	<authorEmail>support@joomlaengineering.com</authorEmail>
	<authorUrl>http://joomlaengineering.com/</authorUrl>
	<version>0</version>
	
	<description>Test Template</description>
	
	<languages>
		<language tag="en-GB">en-GB.tpl_test.ini</language>
	</languages>

	<files>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<params group="advanced">
		<param name="moduleclass_sfx" type="text" description="PARAMMODULECLASSSUFFIX" label="Module Class Suffix"/>
		<param type="spacer" />
		<param name="cache" type="list"	default="1" description="Help_Japan_Cache_Description"	label="Caching">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="2000"	description="Help_Japan_Cache_Time_Description"	label="Cache Time"/>
	</params>
	
	<config>
		<fields name="params">
			<fieldset name="basic">	
				<field name="banner-size" type="list" default="728x90" description="Help_Japan_Banner_Size_Description" label="Help_Japan_Banner_Size_Label">
					<option value="right-corner">Right_Corner</option>
					<option value="left-corner">Left_Corner</option>
					<option value="125x125">125x125</option>
					<option value="160x600">160x600</option>
					<option value="180x150">180x150</option>
					<option value="234x60">234x60</option>
					<option value="300x250">300x250</option>
					<option value="728x90">728x90</option>	
				</field>
				<field name="banner-theme" type="list" description="Help_Japan_Banner_Theme_Description" label="Help_Japan_Banner_Theme_Label"	>
					<option value="show-love">Show_Love</option>
				</field>				
			</fieldset>
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" description="PARAMMODULECLASSSUFFIX" label="Module Class Suffix"/>
				<field type="spacer" />
				<field name="cache" type="list"	default="1" description="Help_Japan_Cache_Description"	label="Caching">
					<option value="1">Use global</option>
					<option value="0">No caching</option>
				</field>
				<field name="cache_time" type="text" default="2000"	description="Help_Japan_Cache_Time_Description"	label="Cache Time"/>
			</fieldset>						
		</fields>
	</config>
	
</install>
