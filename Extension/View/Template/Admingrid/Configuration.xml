    <author_email>AmyStephen@gmail.com</author_email>
    <author_url>http://molajo.org</author_url>
    <version>1.0</version>
    <description>VIEW_TEMPLATE_GRID_DESCRIPTION</description>
    <model name="Admingrid">
        <customfields>
            <customfield name="parameters">
                <field name="grid_toolbar_buttons" type="char" null="0"
                       default="new,edit,publish,feature,archive,checkin,restore,delete,trash,options"
                       values="new,edit,publish,feature,archive,checkin,restore,delete,trash,options"/>
                <field name="grid_submenu_items" type="char" null="0"
                       default="items,categories,drafts"
                       values="items,categories,drafts"/>
                <field name="grid_search" type="binary" null="1" default="1" values="0,1"/>
                <field name="grid_lists" type="char" null="0" default="" values=""/>
                <field name="grid_columns" type="char" null="0"
                       default="id,title,content_text,featured,start_publishing_datetime,ordering,language"
                       values=""/>
                <field name="grid_rows" type="char" null="0" default="5" values=""/>
                <field name="grid_ordering" type="char" null="0" default="a.title" values=""/>
                <field name="grid_ordering_direction" type="char" null="0" default="ASC" values="ASC,DESC"/>
                <field name="grid_pagination" type="char" null="0" default="5" values=""/>
                <field name="grid_batch" type="char" null="0" default="5" values=""/>
                <field name="grid_offset" type="int" null="0" default="0" values=""/>
                <field name="grid_count" type="int" null="0" default="5" values=""/>
            </customfield>
        </customfields>
    </model>
</extension>
