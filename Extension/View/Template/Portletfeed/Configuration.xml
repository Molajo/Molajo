    <version>1.0</version>
    <description>VIEW_TEMPLATE_PORTLETFEED_DESCRIPTION</description>
    <model name="Portletfeed">
        <customfields>
            <customfield name="parameters">
                <field name="criteria_rss_feed" type="url" null="0" default="http:\/\/rss.cnn.com\/rss\/cnn_topstories.rss"/>
                <field name="criteria_count" type="integer" null="0" default="5"/>
                <field name="display_snippet" type="boolean" null="0" default="1"/>
                <field name="display_published_date" type="boolean" null="0" default="1"/>
            </customfield>
        </customfields>
    </model>
